<% include ../layout/header.ejs%>
<div class="main">
    <div class="container">
        <div class="content">
            <% for (var i = 0; i < posts.length; i++){%>
                <div class="post">
                    <div class="top">
                        <h2><a href="/posts/<%= posts[i].url%>"><%= posts[i].title%></a></h2>
                    </div>
                    <div class="body">
                        <%- posts[i].body%>
                    </div>
                    <div class="bottom">
                        <div class="author">

                        </div>
                        <a href="/posts/<%= posts[i].url%>">Comments: <%=posts[i].commentCount %> </a>
                    </div>
                </div>
            <%} %>
            <div class="pagination">
                <% if(curent > 2) { %>
                <a class="new" href="/users/<%= _user.login%>/<%=Number(curent) -1 %>">← New</a>
                <% } %>
                <% if(curent == 2) { %>
                    <a class="new" href="/users/<%= _user.login%>/<%=Number(curent) -1 %>">← First</a>
                <% } %>
                <% if(pages > 0 && curent < pages) { %>
                <a class="old" href="/users/<%= _user.login%>/<%=Number(curent) +1 %>/">Old →</a>
                <% } %>
            </div>
        </div>
        <% include ../layout/sidebar.ejs %>
    </div>
</div>

<% include ../layout/footer.ejs%>

